<% recent_attempt = Rapidfire::Attempt.find_by(user_id: current_user.id, survey_id: survey.id) %>
<div class="survey-attempt-form">
  <tr id= "survey_<%= survey.id %>">
    <td>
      <% if can_administer? %>
        <%= link_to survey.cms_name, survey_questions_path(survey) %>
      <% else %>
        <%= survey.cms_name %>
      <% end %>
    </td>
    <td>
      <ul class="horizontal-list">
        <% if can_administer? %>
          <li><%= link_to "Results", [:results, survey], class: "btn btn-default" %></li>
          <li><%= link_to "Delete", survey, method: :delete, class: "btn btn-default" %></li>
          <li><%= link_to "Export", export_survey_path(survey), class: "btn btn-default" %></li>
        <% else %>
          <li><%= link_to "Answer Questions", new_survey_attempt_path(survey), class: "btn btn-default" %></li>
          <%if recent_attempt %>
            <li><%= link_to "view", survey_attempt_path(id: recent_attempt.id, survey_id: survey.id), class: "btn btn-default" %></li>
          <% end %>
        <% end %>
      </ul>
    </td>
  </tr>
</div>